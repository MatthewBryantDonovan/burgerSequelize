<h1 class=" center">Bob's Burgers!</h1>
<div class="container">
  <div class="row">
    <div class="col s12">
      <form class="create-form">
        <div class="form-group">
          <label id="burger-name-label" for="Burger-Name">Order a burger (Enter burger name)</label>
          <input type="text" id="Burger-Name" name="name">
        </div>
        <button type="submit">Add burger</button>
      </form>
    </div>
  </div>
  <div class="row push-up">
    <div class="col s6">
      <h3>Pick up window:</h3>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s6">
      <h3>Reorder area:</h3>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>